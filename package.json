{
	"name": "dps-expressjs-challenge",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "npx tsc",
		"start": "node dist/index.js",
		"dev": "nodemon ./src/index.ts",
		"lint": "eslint src/**/*.ts",
		"format": "eslint src/**/*.ts --fix",
		"type-check": "tsc --noEmit",
		"prepare": "husky",
		"db:init": "npx ts-node src/scripts/init-db.ts",
		"test:e2e": "npx ts-node src/scripts/test-e2e.ts"
	},
	"lint-staged": {
		"**/*.ts": "eslint"
	},
	"dependencies": {
		"better-sqlite3": "^12.4.1",
		"cookie-parser": "~1.4.7",
		"debug": "~4.4.3",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"http-errors": "~2.0.0"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.13",
		"@types/express": "^ 5.0.5",
		"@types/node": "^24.10.1",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"axios": "^1.13.2",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"lint-staged": "^16.2.6",
		"nodemon": "^3.1.11",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	}
}
